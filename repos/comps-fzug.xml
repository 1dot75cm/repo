<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE comps PUBLIC "-//Red Hat, Inc.//DTD Comps info//EN" "comps.dtd">
<comps>
  <group>
    <id>fzug-input-methods</id>
    <default>false</default>
    <uservisible>true</uservisible>
    <display_order>1024</display_order>
    <name>FZUG Input Methods</name>
    <name xml:lang="zh_CN">FZUG 输入法</name>
    <description>FZUG Input Methods</description>
    <description xml:lang="zh_CN">提供常用输入法</description>
    <packagelist>
      <packagereq type="mandatory">fcitx-qt4</packagereq>
      <packagereq type="mandatory">fcitx-qt5</packagereq>
      <packagereq type="default">sogoupinyin</packagereq>
      <packagereq type="conditional" requires="依赖包">fcitx</packagereq>
      <packagereq type="optional">fcitx-sunpinyin</packagereq>
    </packagelist>
  </group>
  <group>
    <id>fzug-multimedia</id>
    <default>false</default>
    <uservisible>true</uservisible>
    <display_order>1024</display_order>
    <name>FZUG Multimedia</name>
    <name xml:lang="zh_CN">FZUG 多媒体</name>
    <description>FZUG Multimedia</description>
    <description xml:lang="zh_CN">提供常用多媒体软件</description>
    <packagelist>
      <packagereq type="default">kwplayer</packagereq>
      <packagereq type="optional">simplescreenrecorder</packagereq>
      <packagereq type="optional">obs-studio</packagereq>
    </packagelist>
  </group>
</comps>
